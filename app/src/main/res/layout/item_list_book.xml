<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relItemListBook"
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <ImageView
            android:id="@+id/imageViewCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/null_foto" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/imageViewCover"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/imageViewCover"
            android:background="@drawable/gradient_baground"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/txtAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dp"
                android:text="New Text"
                android:textColor="@color/background_floating_material_light"
                android:textSize="14dp" />

            <com.wearesputnik.istoria.helpers.TextViewGeorgia
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtAuthor"
                android:layout_alignStart="@+id/txtAuthor"
                android:layout_marginBottom="8dp"
                android:text="New Text"
                android:textColor="@color/background_floating_material_light"
                android:textSize="16dp"
                android:textStyle="italic" />

            <RelativeLayout
                android:id="@+id/relativeLayout5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txtAuthor"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/txtName"
                android:layout_marginRight="16dp"
                android:paddingBottom="3dp">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@mipmap/eye" />

                <TextView
                    android:id="@+id/txtEye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="7"
                    android:textColor="@color/colorWite" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/imgMoneyIc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@mipmap/money_ic" />

        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/imgStic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        app:srcCompat="@mipmap/ic_stic" />

</RelativeLayout>